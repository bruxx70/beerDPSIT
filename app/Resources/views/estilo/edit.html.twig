{% extends 'base.html.twig' %}

{% block body %}
     <h1>Estilo edit</h1>
    <div class="row">
        <div class="col-xs-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    {{ form_start(edit_form) }}
                    {#{ form_start(form, {"attr":{"novalidate":"novalidate"}}) }#}
